@model AumentaTest.Ejercicio3.Models.Role

@{
    ViewBag.Title = "Roles";
}

<h3>Detalles del rol</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Enabled)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Enabled)
                </dd>

            </dl>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Permisos</h4>
        <div class="panel panel-default">
            <table class="table">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th>
                        Habilitado
                    </th>
                </tr>

                @foreach (var item in Model.RolePermissions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Permission.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Permission.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Permission.Enabled)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
        
<div class="row">
    <div class="col-md-6">
        <i class="glyphicon glyphicon-chevron-left"></i> &nbsp;
        @Html.ActionLink("Regresar al listado", "Index") &nbsp; | &nbsp;
        <i class="glyphicon glyphicon-pencil"></i> &nbsp;
        @Html.ActionLink("Editar rol", "Edit", new { id = Model.Id })
    </div>
</div>
